<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/person_job_tv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/person_name_tv"
        android:layout_below="@+id/person_job_tv"
        android:layout_alignLeft="@+id/person_job_tv"
        android:layout_alignStart="@+id/person_job_tv"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/person_phone_label"
        android:textStyle="bold"
        android:layout_below="@+id/person_name_tv"
        android:layout_alignLeft="@+id/person_job_tv"
        android:layout_alignStart="@+id/person_job_tv"
        android:text="Phone: "
        android:clickable="false"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/person_phone_tv"
        android:autoLink="phone"
        android:layout_below="@+id/person_phone_label"
        android:layout_alignLeft="@+id/person_name_tv"
        android:layout_alignStart="@+id/person_name_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/person_vk_label"
        android:textStyle="bold"
        android:text="VK: "
        android:layout_below="@+id/person_phone_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/person_vk_tv"
        android:autoLink="web"
        android:layout_below="@+id/person_vk_label"
        android:layout_alignRight="@+id/person_phone_tv"
        android:layout_alignLeft="@+id/person_phone_tv"
        android:layout_alignStart="@+id/person_phone_tv"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/person_additional_tv"
        android:layout_below="@+id/person_vk_tv"
        android:layout_alignRight="@+id/person_vk_tv"
        android:layout_alignEnd="@+id/person_vk_tv"/>

</RelativeLayout>